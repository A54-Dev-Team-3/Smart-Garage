@model SetPasswordViewModel

<div style="margin-left:34%; margin-top: 12%">

	<h2>Set a Password</h2>

	<div style="max-width: 500px;">
		<form asp-controller="Admin_Users" asp-action="SetPassword" method="post">

			<div class="form-group" style="margin-bottom: 15px">
				<label asp-for="Password">Password</label>
				<input asp-for="Password" type="password" class="form-control" placeholder="Password">
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>

			<div class="form-groupel" style="margin-bottom: 15px">
				<label asp-for="ConfirmPassword">ConfirmPassword</label>
				<input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password">
				<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
			</div>

			<input asp-for="Email" type="hidden" value="@Model.Email">

			<button style="margin-top:10px" type="submit" value="setPassword" class="btn btn-primary">Update Password</button>
		</form>
	</div>
	
</div>

