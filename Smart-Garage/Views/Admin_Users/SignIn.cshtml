@using Smart_Garage.Models.ViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
	ViewData["Title"] = "Sign In";
}

@model LogInViewModel

<div id="login-Form">

	<h2 id="heading">Sign In</h2>

	<form asp-controller="Admin_Users" asp-action="SignIn" method="post">

		<div class="form-group">
			<label asp-for="Username">Username</label>
			<input asp-for="Username" type="text" class="form-control" id="exampleInputEmail1" placeholder="Username">
			<span asp-validation-for="Username" class="text-danger"></span>
		</div>

		<div class="form-group">
			<label asp-for="Password">Password</label>
			<input asp-for="Password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
			<span asp-validation-for="Password" class="text-danger"></span>
		</div>

		<button style="margin-top:20px" type="submit" value="SignIn" class="btn btn-primary">Sign in</button>
	</form>
</div>