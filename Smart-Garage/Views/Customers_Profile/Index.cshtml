@model CustomerViewModel

<div style="max-width: 35%; margin-left:5%">
    <h4 style="margin-bottom: 20px; display: flex; align-items: center;">
        <span class="material-symbols-outlined" style="margin-right: 5px;">
            person
        </span>
        Account Info
    </h4>

    <div class="form-groupel" style="margin-bottom: 15px">
        <label asp-for="Username">Username</label>
        <input asp-for="Username" type="text" class="form-control InputReadOnly" placeholder="@Model.Username" readonly>
    </div>

    <div class="form-groupel" style="margin-bottom: 15px">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" type="text" class="form-control InputReadOnly" placeholder="@Model.FirstName" readonly>
    </div>

    <div class="form-groupel" style="margin-bottom: 15px">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" type="text" class="form-control InputReadOnly" placeholder="@Model.LastName" readonly>
    </div>

    <div class="form-groupel" style="margin-bottom: 15px">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" type="text" class="form-control InputReadOnly" placeholder="@Model.Email" readonly>
    </div>

    <div class="form-groupel" style="margin-bottom: 15px">
        <label asp-for="PhoneNumber">Phone Number</label>
        <input asp-for="PhoneNumber" type="text" class="form-control InputReadOnly" placeholder="@Model.PhoneNumber" readonly>
    </div>

    <a style="display: block; margin-top: 10px;" asp-controller="Admin_Users" asp-action="SendEmail">Change Password</a>
</div>

