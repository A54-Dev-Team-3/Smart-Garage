@{
    ViewData["Title"] = "Vehicles";
}

@model IList<VehicleViewModel>

<h2 class="heading">Vehicles</h2>

<table class="table myTable" id="resizeMe">
    <thead>
        <tr>
            <th scope="col">License Plate</th>
            <th scope="col">Brand</th>
            <th scope="col">Model</th>
            <th scope="col">Creation Year</th>
            <th scope="col">VIN</th>
            <th scope="col" style="width:20px">Details</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var vehicle in Model)
        {
            <tr>
                <td>@vehicle.LicensePlate</td>
                <td>@vehicle.Brand</td>
                <td>@vehicle.Model</td>
                <td>@vehicle.CreationYear</td>
                <td>@vehicle.VIN</td>

                <td>
                    <form asp-controller="Customers_Vehicles" asp-action="Index" method="post">
                        <input asp-for="@vehicle.Id" type="hidden" name="id" value="@vehicle.Id">
                        <button type="submit" class="btn btn-primary" style="font-size: 0px;">
                            <span class="material-symbols-outlined">
                                description
                            </span>
                        </button>
                    </form>
                </td>
            </tr>
        }

    </tbody>
</table>